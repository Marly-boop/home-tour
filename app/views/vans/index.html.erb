<p id="notice"><%= notice %></p>

<h1>Vans</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Lien</th>
      <th>Titre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vans.each do |van| %>
      <tr>
        <td><%= van.description %></td>
        <td><%= van.link %></td>
        <td><%= van.title %></td>
        <td><%= link_to 'Show', van %></td>
        <td><%= link_to 'Edit', edit_van_path(van) %></td>
        <td><%= link_to 'Destroy', van, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

